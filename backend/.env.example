# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Database Configuration
DATABASE_URL=sqlite:///./career_app.db
# Для PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/dbname

# Security & Encryption
# Ключ шифрования для защиты персональных данных (base64)
# Генерируется автоматически, если не указан
ENCRYPTION_KEY=

# Секретная фраза для генерации ключа шифрования
# В продакшене ОБЯЗАТЕЛЬНО измените на уникальную
SECRET_PHRASE=career-miniapp-secret-2024

# Data Protection Compliance (152-ФЗ)
# Включить дополнительные меры защиты ПД
ENABLE_DATA_PROTECTION=true
DATA_RETENTION_DAYS=30

# File Upload Limits
MAX_FILE_SIZE_MB=1
ALLOWED_FILE_TYPES=pdf,docx,txt

# Redis Configuration (для будущего кэширования)
REDIS_URL=redis://localhost:6379